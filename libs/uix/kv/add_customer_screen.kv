                    MDTextField:
                        id: text_name
                        hint_text: "Name"
                        pos_hint: {"center_y": .5}
                        mode: "rectangle"
                        size_hint_x: 0.75

                MDBoxLayout:
                    orientation: "horizontal"
                    padding: "10dp"
                    size_hint_y: None
                    height: text_name.height
                    MDIcon:
                        icon: "account"
                        size_hint_x: .25
                        pos_hint: {"center_y": .5}

                    MDTextField:
                        id: text_name
                        hint_text: "Name"
                        pos_hint: {"center_y": .5}
